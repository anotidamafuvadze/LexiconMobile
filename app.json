{
  "expo": {
    "name": "Lexicon",
    "slug": "lexicon",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/images/branding/app-logo.png",
    "scheme": "lexicon",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./app/assets/images/branding/splash_screen.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "PORTRAIT"
        }
      ],
      "expo-router",
      "expo-font",
      "expo-audio",
      "expo-web-browser"
    ],
    "ios": {
      "icon": "./app/assets/images/branding/app-logo.png",
      "supportsTablet": true,
      "bundleIdentifier": "com.anotidamafuvadze.lexicon",
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false,
        "UIStatusBarHidden": false,
        "UIBackgroundModes": [], 
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ],
        "NSPhotoLibraryUsageDescription": "Allow Lexicon to access your Photos to save or share game screenshots.",
        "NSPhotoLibraryAddUsageDescription": "Allow Lexicon to add images to your Photo Library when you save or share."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/images/branding/adaptive-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "statusBar": {
        "translucent": true,
        "backgroundColor": "#00000000"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.anotidamafuvadze.lexicon"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8e629067-27f4-47e2-8bc7-456c810a5bd0"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/8e629067-27f4-47e2-8bc7-456c810a5bd0"
    }
  }
}